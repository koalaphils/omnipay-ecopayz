{% extends 'AppBundle:Layout:base.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block content %}
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            {% if is_granted('ROLE_CUSTOMER_PRODUCT_CREATE') %}
            <h4 class="page-title">{{ "page.Create Customer"|trans({},"CustomerBundle") }}</h4>
            {% endif %}
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path("app.dashboard_page") }}">{{ "menus.Dashboard"|trans({},"AppBundle") }}</a>
                </li>
                <li>
                    {% if is_granted('ROLE_CUSTOMER_VIEW') %}
                    <a href="{{ path("customer.list_page") }}">{{ "menus.Customer"|trans({},"CustomerBundle") }}</a>
                    {% endif %}
                </li>
                <li>
                    <a href="{{ path("customer.create_page") }}">{{ "menus.Create"|trans({},"CustomerBundle") }}</a>
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
                {% include "CustomerBundle:Form:customer-form.html.twig" %}
        </div>
    </div>
    
{% endblock %}

{% block javascripts %}
    {{ form_javascript(form) }}
{% endblock %}