{% extends "AppBundle:Layout:base.html.twig" %}

{% block title %}{{ 'page.title.login'|trans({},'AppBundle') }}{% endblock %}

{% block bodyClass %}{% endblock %}

{% block body %}
    <div class="account-pages"></div>
    <div class="clearfix"></div>
    <div class="login-wrapper">
        <div class="card-box main-holder">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <div class="logo-img">
                        <img src="{{ asset("assets/images/CMS-logo2.png") }}" />
                    </div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <div class="divider-custom hidden-xs hidden-sm"></div>
                    <div class=" signin-form">
                        <div class="card-box col-md-12">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, "AppBundle") }}</div>
                            {% endif %}
                            <form class="form-horizontal m-t-20" action="{{ path("app.login_check") }}" method="POST">
                    
                                <div class="form-group ">
                                    <div class="col-xs-12">
                                        <input class="form-control" type="text" required="" placeholder="{{ "login.Username"|trans({},"AppBundle") }}" name="_username" value="{{ lastusername }}" />
                                    </div>
                                </div>
                    
                                <div class="form-group">
                                    <div class="col-xs-12">
                                        <input class="form-control" type="password" required="" placeholder="{{ "login.Password"|trans({},"AppBundle") }}" name="_password" />
                                    </div>
                                </div>
                                <div class="form-group text-center m-t-40">
                                    <div class="col-xs-12">
                                        <button class="btn btn-block text-uppercase waves-effect waves-light" type="submit">{{ "login.Log In" | trans({},"AppBundle") }}</button>
                                    </div>
                                </div>
                            </form> 
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        
    </div>
{% endblock %}

{% block javascripts -%}
    {% if fromLogout %}
    <script type='text/javascript'>
        $(function() {
            $('body').append('<iframe src="https://account.zopim.com/logout?" class="hide"></iframe>');
        })
    </script>
    {% endif %}
{%- endblock %}