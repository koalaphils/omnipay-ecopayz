{% extends "AppBundle:Layout:base.html.twig" %}

{% block title %}{{ 'page.title.login'|trans({},'AppBundle') }}{% endblock %}

{% block bodyClass %}{% endblock %}

{% block body %}
    <div class="clearfix"></div>
    <div class="login-wrapper">
        <div class="card-box main-holder">
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <div class="hidden-xs hidden-sm"></div>
                    <div class="signin-form">
                        <div class="card-box">
                            <div class="logo-img m-t-20">
                                <img src="{{ asset("assets/images/CMS-logo2.png") }}" />
                            </div>

                            <!-- Login Verification -->
                            <form class="form-horizontal m-t-30" class="form" action="" method="post">
                                 <div class="form-group text-center">
                                    <div class="col-xs-12">
                                        We have sent a verification code to your email.
                                    </div>
                                    <div class="col-xs-12">
                                        Enter the code to proceed.
                                    </div>
                                    <div class="col-xs-12 m-t-10 verification-email">
                                        <span>{{ email }}</span>
                                    </div>
                                </div>
                                <div class="form-group m-t-30">
                                    <div class="col-xs-12">
                                        <input id="_auth_code" type="text" autocomplete="off" name="_auth_code" class="form-control" required placeholder="Verification Code" />
                                    </div>
                                    {% for flashMessage in app.session.flashbag.get("2faError") %}
                                    <p class="error">{{ flashMessage }}</p>
                                    {% endfor %}
                                </div>
                                <div class="form-group text-center hidden">
                                    <div class="col-xs-12 signin-link signin-font-sm">
                                        Didn't receive a code? <a href="">Send new code</a>
                                    </div>
                                </div>
                                <div class="form-group text-center m-t-20">
                                    <div class="col-xs-12">
                                        <button class="btn btn-block text-uppercase waves-effect waves-light" type="submit" value="Login">Proceed</button>
                                    </div>
                                    <div class="col-xs-12 m-t-15">
                                        <p class="cancel"><a class="gray" href="{{ path("app.logout") }}">Cancel</a></p>
                                    </div>
                                </div>
                            </form>
                            <!-- End Verification -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        
    </div>
{% endblock %}