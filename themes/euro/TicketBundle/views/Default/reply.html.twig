{% extends 'AppBundle:Layout:base.html.twig' %}

{% block title %}{{ "page.title.reply"|trans({},"TicketBundle") }}{% endblock %}
{% form_theme form _self %}

{#% block _Ticket_requester_widget %}
    {% spaceless %}
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        {{ block('form_widget_simple') }}
    </div>
    {% endspaceless %}
{% endblock %#}
{#% block _Ticket_tag_widget %}
    {% spaceless %}
        <div class="tags-default">
                {{ block('form_widget_simple') }}
        </div>
    {% endspaceless %}
{% endblock %#}




{% block stylesheet_plugins %}
    {{ form_assetcss(form) }}
{% endblock %}

{% block javascript_plugins %}
    {{ form_assetjs(form) }}
{% endblock %}

{% block _Ticket_description_javascript %}
    <script>
        (function($){
            $('#{{ form.vars.id }}').summernote({
                airMode: true,
                height: 300,
                  toolbar: [
                    // [groupName, [list of button]]
                    ['style', ['bold', 'italic', 'underline', 'clear']],
                    ['font', ['strikethrough', 'superscript', 'subscript']],
                    ['fontsize', ['fontsize']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['height', ['height']]
                  ]
            });            
        })(jQuery);
    </script>
{% endblock %}

{% block content %}
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">{{ "page.title.reply"|trans({},"TicketBundle") }}</h4>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path("app.dashboard_page") }}">{{ "menus.Dashboard"|trans({},"AppBundle") }}</a>
                </li>
                <li>
                    <a href="{{ path("ticket.list_page") }}">{{ "menus.Ticket"|trans({},"TicketBundle") }}</a>
                </li>
                <li>
                    <a href="{{ path("ticket.reply_page", {'tid' : form.vars.data.ticketId, 'rid' : form.vars.data.requester}) }}">{{ "menus.Reply"|trans({},"AppBundle") }}</a>
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
        <!--div class="col-sm-12"-->
                {% include "TicketBundle:Form:ticket-reply-form.html.twig" %}
        <!--/div-->
    </div>
    
{% endblock %}

{% block javascripts %}
    {{ form_javascript(form) }}
{% endblock %}