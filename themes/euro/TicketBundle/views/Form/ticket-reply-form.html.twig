{{ form_start(form) }}
<div class="col-lg-3 col-md-4">
    <div class="card-box">
        <div class="row">
            {{ form_row(form.type)}}
            {{ form_row(form.priority)}}
            {{form_row(form.tag)}}
            {{form_row(form.status)}}
        </div>
    </div>
</div>
<div class="col-lg-9 col-md-8">
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                <h4 class="m-t-0"><b>{{form.vars.data.subject}}</b></h4>
                {% for comment in comments %}
                    <hr/>
                    <div class="media m-b-30 ">
                        <div class="media-body">
                            <!--span class="media-meta pull-right">{#{ comment.createdAt|date("F jS \\a\\t g:ia")}#}</span-->
                            <span class="media-meta pull-right">{{comment.createdAt}}</span>
                            <h4 class="text-primary m-0">{{comment.fullName}}</h4>
                            <small class="text-muted">From: {{comment.email}}</small>
                        </div>
                    </div> <!-- media -->
                    <p>{{ comment.htmlBody | raw}}</p>
                {% endfor %}
            </div>
        </div>
    </div>
    <!--reply only -->
    <div class="row">
        <div class="col-sm-12">
            <div class="media m-b-0">
                <div class="media-body">
                    <div class="card-box">
                        {{form_row(form.description)}}
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="text-right">
                {{form_row(form.save)}}
            </div>
        </div>
    <!--reply end here-->
    </div>    
</div>    
{{ form_end(form) }}


       