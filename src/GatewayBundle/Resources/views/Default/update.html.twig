{% extends 'AppBundle:Layout:base.html.twig' %}

{% form_theme form 'GatewayBundle:Form:gateway.html.twig' %}

{% block title %}{{ "page.title.update"|trans({'%name%':gateway.name},"GatewayBundle") }}{% endblock %}

{% block stylesheet_plugins %}
    {{ form_assetcss(form) }}
{% endblock %}

{% block javascript_plugins %}
    {{ form_assetjs(form) }}
{% endblock %}

{% block pageTitle -%}{{ "page.Update Gateway"|trans({},"GatewayBundle") }}{%- endblock %}

{% block pageHeaderExtra %}
<div class="pull-right">
    <div class="pull-right">
        {% if is_granted('ROLE_GATEWAY_VIEW') %}
        <a class="btn btn-inverse waves-effect waves-light m-b-10" href="{{ path("gateway.list_page") }}">{{ "menus.BackToGatewayList"|trans({},"GatewayBundle") }}<span><i class="ti-arrow-left m-r-5 cls-icn-plus"></i></span></a>
        {% endif %}
    </div>
    <ul class="list-inline quicklinks font-13 font-normal text-right">
        <li>Quick Links:</li>
        {% if is_granted('ROLE_CURRENCY_VIEW') %}
        <li><a href="{{ path("currency.list_page") }}">Currency</a></li>|
        {% endif %}
        {% if is_granted('ROLE_PRODUCT_VIEW') %}
        <li><a href="{{ path("product.list_page") }}">Product</a></li>|
        {% endif %}
        {% if is_granted('ROLE_DWL_VIEW') %}
        <li><a href="{{ path("dwl.list_page") }}">DWL</a></li>
        {% endif %}
    </ul>
</div>
{% endblock pageHeaderExtra %}

{% block breadcrumb -%}
    <li>{{ "breadcrumb.finance"|trans({},"AppBundle") }}</li>
    <li>
        <a href="{{ path("gateway.list_page") }}">{{ "breadcrumb.list"|trans({},"GatewayBundle") }}</a>
    </li>
    <li class="active">
        {{ "menus.Update"|trans({},"AppBundle") }}
    </li>
{%- endblock %}

{% block page -%}
    {% include "GatewayBundle:Form:gateway-form.html.twig" %}
{%- endblock %}

{% block javascripts %}
    <script type="text/javascript">
        var paymentOptionModes = {{ (paymentOptionModes|json_encode(true))|raw }};
    </script>

    {{ form_javascript(form) }}
{% endblock %}